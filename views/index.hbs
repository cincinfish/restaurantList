<script type="text/javascript" src="../javascripts/delete.js">
</script>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="d-flex align-items-center">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control mx-2" placeholder="輸入餐廳、分類，多筆輸入請用,分隔"
              aria-label="Restaurant Name..." value="{{ keyword }}" aria-describedby="search-button">
            <div class="input-group-append mx-2">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <select class="form-select form-select-lg d-inline-flex bd-highlight  w-25" id="sort" name="sort"
            onchange="this.form.submit()" aria-label="form-select-lg example">
            <option value="" {{#if sort.id-asc}}selected{{/if}}>Sort</option>
            <option value="name-asc" {{#if sort.name-asc}}selected{{/if}}>A to Z</option>
            <option value="name-desc" {{#if sort.name-desc}}selected{{/if}}>Z to A</option>
            <option value="rating-asc" {{#if sort.rating-asc}}selected{{/if}}>Rating: Low to High</option>
            <option value="rating-desc" {{#if sort.rating-desc}}selected{{/if}}>Rating: High to Low</option>
          </select>
        </div>
    </div>
    {{#if restaurantList.length}}
    {{else}}
    <div>您搜尋的關鍵字<b>{{ keyword }}</b>不存在，請重新搜尋</div>
    {{/if}}
    <!-- sort -->

    </form>
  </div>
</div>
</div>
<div class="container d-flex justify-content-end mt-2 pe-5">

</div>
<div id="add-page-scroll">
  <a href="./restaurants/new">
    <i class="fa-duotone fa-solid fa-circle-plus fa-2xl"></i>
  </a>
</div>
<div class="container mt-5">
  <!-- restaurant list -->
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each restaurantList}}
        <div class="col mb-4">
          <a href="./restaurants/{{this._id}}" class="text-secondary" style="text-decoration:none;">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill text-bg-danger fw-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <div class="d-flex justify-content-end align-items-center mb-1">
            <a href="./restaurants/{{this._id}}/edit" class="btn btn-link p-2">Edit</a>
            <a href="/restaurants/{{ this._id }}" class="btn btn-link p-2">Detail</a>

            <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST" onsubmit="return ConfirmDelete()"
              style="display: inline;">
              <button type="submit" class="btn btn-danger p-2">Delete</button>
            </form>
          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>