<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">


      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-1">
        {{ restaurant.description}}
      </p>
      <div class="d-flex justify-content-end align-items-center mb-5">
        <a href="./{{restaurant._id}}/edit" class="fw-bold fs-5  link-primary "> Edit</a>
        <script>
          function ConfirmDelete() {
            if (confirm("確認要刪除此餐廳嗎?")) {
              return true
            }
            return false
          }
        </script>
        <form action="./restaurants/{{restaurant._id}}/delete" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger fw-bold fs-5 ">Delete</button>
        </form>
      </div>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.title }}"
        style="max-width: 600px;">
    </div>

  </div>
</div>